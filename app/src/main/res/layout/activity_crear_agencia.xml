<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/header" />

        <!-- Nombre -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de la Agencia"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>
        <EditText
            android:id="@+id/etNombreAgencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_redondo"
            android:padding="12dp"/>

        <!-- Teléfono -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teléfono"
            android:textSize="16sp"
            android:layout_marginTop="12dp"/>
        <EditText
            android:id="@+id/etTelefonoAgencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_redondo"
            android:padding="12dp"
            android:inputType="phone"/>

        <!-- Dirección -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dirección"
            android:textSize="16sp"
            android:layout_marginTop="12dp"/>
        <EditText
            android:id="@+id/etDireccionAgencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_redondo"
            android:padding="12dp"/>

        <!-- Botón Guardar -->
        <Button
            android:id="@+id/btnGuardarAgencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar Agencia"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_naranja_oscuro"
            android:layout_marginTop="20dp"
            app:backgroundTint="@null"/>
    </LinearLayout>
</ScrollView>
