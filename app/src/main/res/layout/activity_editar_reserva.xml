<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Nombre del huésped -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del huésped"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>
        <EditText
            android:id="@+id/etNombreHuesped"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_redondo"
            android:padding="12dp"/>

        <!-- Agencia -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agencia"
            android:textSize="16sp"
            android:layout_marginTop="12dp"/>
        <EditText
            android:id="@+id/etAgencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_redondo"
            android:padding="12dp"
            android:hint="Opcional"/>

        <!-- Fecha inicio -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha inicio"
            android:textSize="16sp"
            android:layout_marginTop="12dp"/>
        <EditText
            android:id="@+id/etFechaInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_redondo"
            android:padding="12dp"
            android:focusable="false"
            android:clickable="true"
            android:hint="AAAA-MM-DD"/>

        <!-- Fecha fin -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha fin"
            android:textSize="16sp"
            android:layout_marginTop="12dp"/>
        <EditText
            android:id="@+id/etFechaFin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_redondo"
            android:padding="12dp"
            android:focusable="false"
            android:clickable="true"
            android:hint="AAAA-MM-DD"/>


        <!-- Número de habitaciones -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Número de habitaciones"
            android:textSize="16sp"
            android:layout_marginTop="12dp"/>
        <EditText
            android:id="@+id/etHabitaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_redondo"
            android:padding="12dp"
            android:inputType="number"/>

        <!-- Botón guardar -->
        <Button
            android:id="@+id/btnGuardarReserva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar cambios"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_naranja_oscuro"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</ScrollView>
