<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Header estÃ¡ndar -->
    <include
        layout="@layout/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Contenedor de botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btnCrearReserva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crear reserva"
            android:textColor="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_naranja_oscuro"
            app:backgroundTint="@null"/>

        <Button
            android:id="@+id/btnVerReservas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver reservas"
            android:textColor="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_naranja_oscuro"
            app:backgroundTint="@null"/>

        <Button
            android:id="@+id/btnEditarReserva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar reserva"
            android:textColor="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_naranja_oscuro"
            app:backgroundTint="@null"/>

        <Button
            android:id="@+id/btnCancelarReserva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancelar reserva"
            android:textColor="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_naranja_oscuro"
            app:backgroundTint="@null"/>

        <Button
            android:id="@+id/btnDetallesReserva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver detalles de reserva"
            android:textColor="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_naranja_oscuro"
            app:backgroundTint="@null"/>

        <Button
            android:id="@+id/btnCrearAgencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crear agencia"
            android:textColor="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_naranja_oscuro"
            app:backgroundTint="@null"/>
    </LinearLayout>

</LinearLayout>
