<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardBackgroundColor="#D2691E"
    android:elevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_naranja_oscuro"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTipoHabitacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/tvNumeroHabitacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NÃºmero"
            android:textSize="16dp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvDisponibilidadHabitacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disponible / Ocupada"
            android:textSize="16dp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btnEditarHabitacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar"
                android:background="@drawable/bg_btn_redondo"
                android:textColor="#000000"/>

            <Button
                android:id="@+id/btnReservarHabitacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reservar"
                android:layout_marginStart="10dp"
                android:background="@drawable/bg_btn_redondo"
                android:textColor="#000000"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

