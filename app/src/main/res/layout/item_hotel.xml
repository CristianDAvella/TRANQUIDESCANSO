<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="18dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/naranjaoscuro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- HEADER -->
        <TextView
            android:id="@+id/tvHotelNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del Hotel"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:fontFamily="@font/latolight"
            android:textStyle="bold"
            android:paddingBottom="6dp"/>

        <!-- TEXTO NORMAL -->
        <TextView
            android:id="@+id/tvHotelDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dirección"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/latolight"/>

        <TextView
            android:id="@+id/tvHotelCategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Categoría"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/latolight"
            android:layout_marginBottom="12dp"/>

        <!-- BOTONES -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="4dp">

            <Button
                android:id="@+id/btnEditarHotel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:text="Editar"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:fontFamily="@font/latolight"
                android:stateListAnimator="@null"
                android:background="@drawable/bg_btn_redondo" />


            <Button
                android:id="@+id/btnHistorialHotel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_height="45dp"
                android:text="Historial"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:fontFamily="@font/latolight"
                android:backgroundTint="@color/naranjaclaro"
                android:stateListAnimator="@null"
                android:background="@drawable/bg_btn_redondo"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
